@using ChessForumWebApp.ViewModels
@model List<UserViewModel>

<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
                    <tbody>
                        <tr>
                            <th>User e-mail</th>
                            <th>View profile</th>
                            <th>FIDE Rating</th>
                        </tr>
                        <tr class="table-divider">
                             <th></th>
                             <td></td>
                        </tr>
                        @foreach (var user in Model)
                        {
                            <tr class="bg-white">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <img alt="Image profile avatar" src="@user.ProfileImageUrl" width="100px" height="100px" class="avatar">
                                        <div class="media-body">
                                            <span class="h6 mb-0">@user.UserName</span>
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">
                                        View Profile
                                    </a>
                                </td>

                                @{
                                    var fideRating = user.FideRating == null ? "unknown" : user.FideRating.ToString();
                                }
                                <td>@fideRating </td>
                                @*<td><i class="icon-location"></i> @user.Location</td>*@
                            </tr>
                            <tr class="table-divider">
                                <th></th>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>